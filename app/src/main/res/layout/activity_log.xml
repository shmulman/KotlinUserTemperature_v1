<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityLog">

    <ScrollView
            android:id="@+id/LogScroll"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_below="@id/ConnectionStatus">
        <TextView
                android:id="@+id/LogOutput"
                android:text="@string/DataOutputString"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars = "vertical"
                android:fadeScrollbars="false"
        />
    </ScrollView>

    <Button
            android:id="@+id/LogBackBtn"
            android:text="@string/BackToMainString"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/LogScroll"
    />

</RelativeLayout>